<script>
  $(document).ready(function(){
      $('[data-toggle="popover"]').popover();
  });
</script>


<h1>Meus Horários</h1>

<div class="container">
  <h2>
    <span class="label label-info">Extras: <%= float_para_hora(@total_extra) %></span>
    <span class="label label-warning">Compensado: <%= float_para_hora(@total_compensado) %></span>
    <% if @saldo_hora < 0 %>
      <span class="label label-danger">Saldo: <%= float_para_hora(@saldo_hora) %></span>
    <% else %>
      <span class="label label-success">Saldo: <%= float_para_hora(@saldo_hora) %></span>
    <% end %>
    <button data-toggle="collapse" data-target="#historico" class="btn">Detalhar</button>
  </h1>
</div>

<div id="historico" class="collapse">
  <table  class="table">
    <thead>
      <tr>
        <th>Mês</th>
        <th>Extra</th>
        <th>Compensado</th>
        <th>Saldo</th>
        <th>Saldo Acumulado</th>
      </tr>
    </thead>

    <tbody>
      <% i = 0  %>
      <% while i < 6 do %>
        <tr>
          <td><%= @historico[i][0] %></td>
          <td><%= float_para_hora(@historico[i][1]) %></td>
          <td><%= float_para_hora(@historico[i][2]) %></td>
          <td>
            <% if @historico[i][3] < 0 %>
              <%= "- " + float_para_hora(@historico[i][3].abs) %>
            <% else %>
              <%= float_para_hora(@historico[i][3]) %>
            <% end %>
          </td>
          <td>
            <% if @historico[i][4] < 0 %>
              <%= "- " + float_para_hora(@historico[i][4].abs) %>
            <% else %>
              <%= float_para_hora(@historico[i][4]) %>
            <% end %>
          </td>
        </tr>
        <% i+= 1 %>
      <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate @horarios, renderer: BootstrapPagination::Rails %>

<table  class="table">
  <thead>
    <tr>
      <th>Data</th>
      <th>Tipo</th>
      <th>Inicio</th>
      <th>Fim</th>
      <th>Duração</th>
      <th>Motivo</th>
      <th>Situação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @horarios.each do |horario| %>
      <tr <%= !horario.hora_valida ? 'class=warning' : "" %> >
        <td><%= horario.data ? horario.data.strftime("%d/%m/%Y") : '' %></td>
        <td><%= horario.hora_extra ? 'Hora Extra' : 'Compensado' %></td>
        <td><%= horario.inicio %></td>
        <td><%= horario.fim %></td>
        <td><%= float_para_hora(horario.total_horas) %></td>
        <td><a data-toggle="popover" title="Motivo completo" data-content="<%= horario.motivo %>"><%= horario.motivo.truncate(50) %></a></td>
        <td>
          <% if !horario.hora_valida %>
            Pendente
          <% else %>
            Validado
          <% end %>
        </td>
        <td><%= link_to 'Exibir', horario %></td>
        <td>
          <% if !horario.hora_valida %>
            <%= link_to 'Editar', edit_horario_path(horario) %>
          <% end %>
        </td>
        <td>
          <% if !horario.hora_valida %>
            <%= link_to 'Apagar', horario, method: :delete, data: { confirm: 'Você tem certeza?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @horarios, renderer: BootstrapPagination::Rails %>
