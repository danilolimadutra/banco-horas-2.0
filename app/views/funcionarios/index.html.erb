<h1>Funcionarios</h1>

<%= link_to 'Novo Funcionario', new_funcionario_path, class: 'btn btn-default'%>

<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Usuário</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= link_to funcionario.nome, controller: "funcionarios", action: "horarios", id: funcionario %></td>
        <td><%= funcionario.cpf %></td>
        <td><%= funcionario.user ? funcionario.user.email : ""  %></td>
        <td><%= link_to 'Exibir', funcionario %></td>
        <td><%= link_to 'Editar', edit_funcionario_path(funcionario) %></td>
        <td><%= link_to 'Apagar', funcionario, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

